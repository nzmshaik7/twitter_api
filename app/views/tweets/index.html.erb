<p id="notice"><%= notice %></p>

<h1>Tweets</h1>

<%= form_tag(tweets_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:string_search], placeholder: "Search Tweets" %>
<%= submit_tag "Search" %>
<% end %>


<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Message body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.username %></td>
        <td><%= tweet.message_body %></td>
	<td><%= tweet.created_at %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

